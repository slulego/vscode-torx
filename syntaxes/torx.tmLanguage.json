{
	"name": "Torx",
	"scopeName": "text.html.torx",
	"injections": {
		"text.html.basic - (meta.embedded | meta.tag), L:text.html.torx meta.tag, L:text.html.torx source.js": {
			"patterns": [{
				"include": "#block-comment"
			}, {
				"include": "#statement"
			}, {
				"include": "#end-bracket"
			}]
		}
	},
	"patterns": [{
		"include": "#block-comment"
	}, {
		"include": "#code-block"
	}, {
		"include": "#end-bracket"
	}, {
		"include": "#escape-entity"
	}, {
		"include": "#statement"
	}, {
		"include": "#function"
	}, {
		"include": "#include"
	}, {
		"include": "#else"
	}, {
		"include": "#else-if"
	}, {
		"include": "#expression-explicit"
	}, {
		"include": "#expression-implicit"
	}, {
		"include": "text.html.basic"
	}],
	"repository": {
		"block-comment": {
			"begin": "\\@\\*",
			"captures": {
				"0": {
					"name": "punctuation.definition.comment.source.torx"
				}
			},
			"name": "comment.block.torx",
			"end": "\\*\\@"
		},
		"code-block": {
			"begin": "\\@\\{",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			},
			"patterns": [{
				"include": "source.js"
			}],
			"end": "\\}"
		},
		"end-bracket": {
			"match": "\\}",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			}
		},
		"escape-entity": {
			"match": "\\@\\@",
			"name": "keyword.control.torx"
		},
		"expression-explicit": {
			"name": "meta.expression.explicit.torx",
			"begin": "(\\@)\\(",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			},
			"patterns": [{
				"include": "source.js"
			}],
			"end": "\\)"
		},
		"expression-implicit": {
			"name": "meta.expression.implicit.torx",
			"match": "(?<!\\@)(\\@)((\\w+)((?=\\.\\w)\\.\\w+)*((?=\\(.*\\))\\(.*\\))?((?=\\[.*\\]).*\\])?)",
			"captures": {
				"0": {
					"name": "variable.expression.torx"
				},
				"1": {
					"name": "keyword.control.torx"
				},
				"2": {
					"patterns": [{
						"include": "source.js"
					}]
				}
			}
		},
		"statement": {
			"begin": "\\@(for|if|while|switch)\\s*\\(",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			},
			"patterns": [{
				"include": "source.js"
			}],
			"end": "\\)\\s*\\{"
		},
		"function": {
			"begin": "\\@function\\s(\\w+)\\s?\\((.*)\\)\\s*{",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				},
				"1": {
					"name": "meta.definition.function.torx entity.name.function.torx"
				},
				"2": {
					"patterns": [{
						"include": "source.js"
					}]
				}
			},
			"end": "}",
			"patterns": [{
				"include": "text.html.torx"
			}]
		},
		"include": {
			"begin": "(\\@include)\\s*\\(",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			},
			"patterns": [{
				"include": "source.js"
			}],
			"end": "\\)"
		},
		"else-if": {
			"begin": "(else\\sif)\\s?\\(",
			"captures": {
				"0": {
					"name": "keyword.control.torx"
				}
			},
			"patterns": [{
				"include": "source.js"
			}],
			"end": "\\)\\s*\\{"
		},
		"else": {
			"match": "else\\s*\\{",
			"name": "keyword.control.torx"
		}
	}
}